# Porkbun API credentials
API_KEY=your_api_key_here
API_SECRET=your_secret_api_key_here

# The domain you want to update (e.g., example.com)
DOMAIN=example.com

# The record to update:
# Use "@" for the root domain (example.com)
# Use "home" for a subdomain (home.example.com)
RECORD_NAME=@

# Optional: Time To Live in seconds (default is 300)
TTL=300
